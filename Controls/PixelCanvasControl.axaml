<!-- Controls/PixelCanvasControl.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:PixelWallE.Models"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
             x:Class="PixelWallE.Controls.PixelCanvasControl"
             ClipToBounds="True"> <!-- Ensure drawing stays within bounds -->
    <Design.DataContext>
      <!-- Provide dummy data for previewer -->
      <models:PixelCanvas Width="10" Height="10"/>
    </Design.DataContext>
</UserControl>